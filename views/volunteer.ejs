<%- include("partials/header") -%> 
      <section class="text-gray-400 bg-gray-300 body-font">
        <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
          <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
            <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-black">SAVE LIVES WITH PLASMA
            </h1>
            <p class="mb-8 leading-relaxed">We're glad that you have decided to contribute for the well cause</p>
            <div class="flex justify-center">
            </div>
          </div>
        </div>
      </section>
        <section class="text-gray-600 body-font relative" style="user-select: auto;">
          <form action="/volunteer" method="post">
          <div class="container px-5 py-24 mx-auto flex sm:flex-nowrap flex-wrap items-center" style="user-select: auto;">
            <div class="mx-5 bg-white flex flex-col md:ml-auto w-2/3 md:py-8 mt-8 md:mt-0" style="user-select: auto;">
              <h2 class="text-gray-900 text-lg mb-1 font-medium title-font" style="user-select: auto;">Form</h2>
              <div class="relative mb-4" style="user-select: auto;">
                <label for="name" class="leading-7 text-sm text-gray-600" style="user-select: auto;">Name&nbsp;&nbsp;&nbsp;&nbsp;</label>
                <input type="text" id="name" name="name" class="w-50 bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" style="user-select: auto;">
              </div>
              <div class="relative mb-4" style="user-select: auto;">
                <label for="mobile" class="leading-7 text-sm text-gray-600" style="user-select: auto;">Mobile&nbsp;&nbsp;&nbsp;</label>
                <input type="mobile" id="mobile" name="mobile" class="w-50 bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" style="user-select: auto;">
              </div>
              <div class="relative mb-4" style="user-select: auto;">
                <label for="pincode" class="leading-7 text-sm text-gray-600" style="user-select: auto;">PINCODE&nbsp;</label>
                <input type="pincode" id="pincode" name="pincode" class="w-50 bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" style="user-select: auto;">
              </div>
              <div class="relative mb-4" style="user-select: auto;">
                <label for="pincode" class="leading-7 text-sm text-gray-600" style="user-select: auto;">E-MAIL&nbsp;</label>
                <input type="pincode" id="email" name="email" class="w-50 bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" style="user-select: auto;">
              </div>
              <div>
  <label for="price" class="block text-sm font-medium text-gray-700">Department</label>
  <div class="mt-1 relative rounded-md shadow-sm">
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
    </div>
      <select id="dep" name="dep" class="focus:ring-indigo-500 focus:border-indigo-500 my-5 h-full py-0 pl-2 pr-7 border-transparent bg-transparent text-gray-500 sm:text-sm rounded-md items-center">
        <option >Tech</option>
        <option >Design</option>
        <option >Management</option>
        <option >Data</option>
        <option >Hospitality</option>
      </select>
    </div>
  </div>
  <button class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 w-1/4 rounded text-lg" style="user-select: auto;">Button</button>          
</div>
  </div>
          </div></form>
      </section>
      
      <%- include("partials/footer") -%> 